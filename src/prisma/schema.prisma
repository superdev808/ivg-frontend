generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}


model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String

}

model Guide {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  value String
}

model GuideStep {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  guideId String
  type StepType
  value1 String
  value2 String
  link String
  start Boolean
  end Boolean
}
model GuideStepOption {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  sourceId String
  targetId String
  value1 String
}

enum StepType {
  text
  link
  video
  image
}